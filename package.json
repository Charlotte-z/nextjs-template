{
  "name": "relay-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all -p watch_relay next:dev",
    "start:watch": "concurrently --kill-others --names \"yarn run watch_relay\" \"react-scripts start\"",
    "relay": "relay-compiler --src . --schema ./schema/schema.graphql ",
    "watch_relay": "npm-watch relay",
    "start2": "pnpm relay && concurrently --kill-others --names \"pnpm run next:dev\" \"pnpm relay --watch\"",
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start"
  },
  "watch": {
    "relay": {
      "patterns": [
        "."
      ],
      "extensions": "ts,tsx, graphql",
      "verbose": true
    }
  },
  "dependencies": {
    "dotenv": "^14.3.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "next": "12.0.9",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-relay": "^13.0.1",
    "relay-compiler-language-typescript": "^15.0.0",
    "relay-runtime": "^13.0.1",
    "sass": "^1.49.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.7",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-relay": "^13.0.0",
    "@types/relay-runtime": "^13.0.0",
    "autoprefixer": "^10.4.2",
    "babel-plugin-relay": "^13.0.2",
    "concurrently": "^5.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "get-graphql-schema": "^2.1.2",
    "graphql": "^15.6.1",
    "postcss": "^8.4.5",
    "prettier": "^1.18.2",
    "relay-compiler": "^13.0.2",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.5.5"
  }
}
